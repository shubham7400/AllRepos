<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="image_circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="customDialog" parent="Theme.Material3.Light.Dialog">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="FullScreenDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/indigo</item>
        <item name="colorPrimary">@color/indigo</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/indigo_dark</item>
    </style>


    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/yellow</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>